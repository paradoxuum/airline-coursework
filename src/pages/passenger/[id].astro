---
import { PassengerDetails } from "@/components/passengers";
import Layout from "@/layouts/Layout.astro";

export const prerender = false;

const { id } = Astro.params;

const idNum = id !== undefined ? Number.parseInt(id) : 0;
---

<Layout title={`Airplane | Passenger ${id}`}>
  <div class="flex flex-col gap-4">
    <PassengerDetails id={idNum} client:only="react" />
  </div>
</Layout>
